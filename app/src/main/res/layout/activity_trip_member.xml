<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.loibv.t1p.TripMemberActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_search_member"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        android:navigationIcon="@drawable/ic_toolbar_arrow"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/tb_search_member"
        android:id="@+id/rv_tripmember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:visibility="invisible"
        android:layout_below="@id/tb_search_member"
        android:id="@+id/rv_searchresult_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
