<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:elevation="100dp"
        android:background="@color/white">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tripimg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/iv_tripimg"
                android:alpha="0.3"
                android:background="#000000" />

            <TextView
                android:id="@+id/tv_tripname"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/iv_tripimg"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/iv_triptime"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_tripname"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:src="@mipmap/ic_alarm_black_24dp" />

            <TextView
                android:id="@+id/tv_triptime"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_tripimg"
                android:layout_toRightOf="@id/iv_triptime"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="abcd" />

            <ImageView
                android:id="@+id/iv_tripfund"
                android:layout_margin="5dp"
                android:layout_below="@+id/tv_tripname"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_fund"
                android:layout_toLeftOf="@+id/iv_tripmembers" />

            <ImageView
                android:id="@+id/iv_tripmembers"
                android:layout_margin="5dp"
                android:layout_below="@+id/tv_tripname"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_members"
                android:layout_alignParentRight="true" />


            <ImageView
                android:id="@+id/iv_tripplace"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_triptime"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:src="@mipmap/ic_room_black_24dp" />

            <TextView
                android:id="@+id/tv_tripplace"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_triptime"
                android:layout_toRightOf="@id/iv_tripplace"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>